% Facts representing family members
parent(john, alice).
parent(john, bob).
parent(alice, carol).
parent(bob, david).
parent(carol, emma).
parent(david, grace).

% Rules to define relationships
father(Father, Child) :-
    parent(Father, Child),
    male(Father).

mother(Mother, Child) :-
    parent(Mother, Child),
    female(Mother).

grandparent(Grandparent, Grandchild) :-
    parent(Grandparent, Parent),
    parent(Parent, Grandchild).

% Define genders
male(john).
male(bob).
male(david).

female(alice).
female(carol).
female(emma).
female(grace).

%query:male(carol).
